<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.unocode.colormemory.MainActivity"
    tools:deviceIds="wear_round">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_box="all">

        <TextView
            android:id="@+id/gametitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="top"
            android:text="@string/app_name" />

        <ImageButton
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gametitle"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_play_circle_filled_white_48dp"
            android:contentDescription="@string/start"
            android:onClick="startGame"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnStart"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:text="@string/highscore" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/highscore"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_settings_white_24dp"
                android:contentDescription="@string/settings"
                android:onClick="showSettings"
                android:layout_margin="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_info_white_24dp"
                android:contentDescription="@string/about"
                android:onClick="showAbout"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.wearable.view.BoxInsetLayout>
